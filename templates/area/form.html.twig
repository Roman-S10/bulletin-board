{% extends 'layout.html.twig' %}

{% block title %}
    {% if id %}
        Редактирование области<small>[{{ id }}]</small>
    {% else %}
        Добавление области
    {% endif %}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.name, { label: 'Наименование', attr: { class: 'form-control' } }) }}
        </div>
        {{ form_row(form.save, { attr: { class: 'btn btn-primary btn-lg btn-block' }}) }}
    {{ form_end(form) }}
{% endblock %}