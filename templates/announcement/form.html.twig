{% extends 'layout.html.twig' %}

{% block title %}
    {% if id %}
        Редактирование объявления<small>[{{ id }}]</small>
    {% else %}
        Добавление объявления
    {% endif %}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.area, { label: 'Область', attr: { class: 'form-control' } }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.city, { label: 'Город', attr: { class: 'form-control' } }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.category, { label: 'Категория', attr: { class: 'form-control' } }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.title, { label: 'Заголовок', attr: { class: 'form-control' } }) }}
        </div>
        <div class="form-group">
        {{ form_row(form.description, { label: 'Описание', attr: { class: 'form-control' } }) }}
        </div>
        {{ form_row(form.save, { attr: { class: 'btn btn-primary btn-lg btn-block' }}) }}
    {{ form_end(form) }}
{% endblock %}