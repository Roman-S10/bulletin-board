{% extends 'layout.html.twig' %}

{% block title %}
    Регистрация
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.username, { label: 'Логин', attr: { class: 'form-control' }  }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.email, { label: 'Email', attr: { class: 'form-control' }  }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.password) }}
    </div>
    <div class="form-group">
        {{ form_row(form.surname, { label: 'Фамилия', attr: { class: 'form-control' }  }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.name, { label: 'Имя', attr: { class: 'form-control' }  }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.patronymic, { label: 'Отчество', attr: { class: 'form-control' }  }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.birthDate, { label: 'Дата рождения', attr: { class: 'form-control' }  }) }}
    </div>
    {{ form_row(form.submit, { label: 'Отправить',  attr: { class: 'btn btn-primary btn-lg btn-block' }}) }}
    {{ form_end(form) }}
{% endblock %}