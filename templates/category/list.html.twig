{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class="mb-3">Категории</h1>
    <div class="card">
        <div class="card-body">
            <ul class="list-inline">
                {% for category in categories %}
                    <li class="list-inline-item"><a href="{{ path('announcement-list', {'city' : city, 'category' : category.id}) }}">{{ category.name }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}